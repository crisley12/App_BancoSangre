<RootScreen>
    MDScreen:
        MDBottomNavigation:
            panel_color: "#ffffff"
            text_color_active: "red"
            radius: [16]
            elevation: 2


#########################################
#     PANTALLA DE USER
#########################################
            MDBottomNavigationItem:
                name: "user_screen"
                icon: "account-circle"
                #text: "User"
                UserScreen:
                    name: "user_screen"
                MDFloatLayout:
                    md_bg_color: get_color_from_hex("#ffffff")
                    MDCard:
                        id: image_bg_box
                        md_bg_color: get_color_from_hex("#F41F05")
                        size_hint_y: .30
                        pos_hint: {"top": 1}
                        radius: [0, 0, 50, 50]
                    FitImage:
                        source:'asset/img/user4.png'
                MDLabel:
                    text: "Basantranfs"
                    font_name: 'asset/Fuentes/Poppins-SemiBold.ttf'
                    pos_hint: {"center_x": .5, "center_y": .93}
                    halign: 'center'
                    text_color: get_color_from_hex("#FFFFFF")
                    font_size: '25sp'
                    theme_text_color: 'Custom'
                MDLabel:
                    id: nombre_user_paciente
                    text: ""
                    font_name: 'asset/Fuentes/Poppins-SemiBold.ttf'
                    pos_hint: {"center_x": .5, "center_y": .80}
                    halign: 'center'
                    text_color: get_color_from_hex("#FFFFFF")
                    font_size: '15sp'
                    theme_text_color: 'Custom'

                MDLabel:
                    text: "0001"
                    font_size: "15sp"
                    font_name: 'asset/Fuentes/Poppins-SemiBoldItalic.ttf'
                    theme_text_color: "Custom"
                    text_color: get_color_from_hex("#FFFFFF")
                    pos_hint: {"center_x": .40, "center_y": .73}
                    halign: "center"
                    line_height: .6

                MDLabel:
                    id: sagre_user_paciente
                    text: ""
                    font_size: "18sp"
                    font_name: 'asset/Fuentes/Poppins-SemiBoldItalic.ttf'
                    theme_text_color: "Custom"
                    text_color: get_color_from_hex("#FFFFFF")
                    pos_hint: {"center_x": .60, "center_y": .73}
                    halign: "center"
                    line_height: .6


                MDGridLayout:
                    id: cards_box
                    cols: 2
                    rows: 3
                    spacing: "15dp"
                    padding: "35dp"
                    size_hint_y: None
                    height: root.height / 1.6

                    MDCard:
                        orientation: "vertical"
                        radius: 12
                        padding: "12dp", "5dp", "12dp", "12dp"
                        ripple_behavior: True
                        md_bg_color: get_color_from_hex("#FAFAFA")
                        on_release: 
                            app.root.transition.direction = "left" 
                            app.root.current = 'requirements'
                        MDIconButton:
                            icon: "text-box-edit-outline"
                            pos_hint: {"center_x": .50, "center_y": .45}
                        MDLabel:
                            text:"Requisitos para donar sangre"
                            halign: "center"
                            adaptive_height: True
                            line_height: .6
                            font_size: "14sp"


                    MDCard:
                        orientation: "vertical"
                        radius: 12
                        padding: "12dp", 0, "12dp", "24dp"
                        ripple_behavior: True
                        md_bg_color: get_color_from_hex("#FAFAFA")
                        on_release:  
                            app.root.transition.direction = "left" 
                            app.root.current = 'donate'
                            
                        MDIconButton:
                            icon: 'hand-heart'
                            pos_hint: {"center_x": .50, "center_y": .43}
                        MDLabel:
                            text:"Quiero donar"
                            halign: "center"
                            adaptive_height: True
                            line_height: .6
                            font_size: "14sp"


                    MDCard:
                        orientation: "vertical"
                        radius: 12
                        padding: "12dp", 0, "12dp", "24dp"
                        ripple_behavior: True
                        md_bg_color: get_color_from_hex("#FAFAFA")
                        on_release: 
                            app.root.transition.direction = "left" 
                            app.root.current = 'paciente_donaciones'
                        MDIconButton:
                            icon: "book-heart-outline"
                            halign: "center"
                            pos_hint: {"center_x": .50, "center_y": .33}
                        MDLabel:
                            text:"Mis donaciones"
                            halign: "center"
                            adaptive_height: True
                            line_height: .6
                            font_size: "14sp"



                    MDCard:
                        orientation: "vertical"
                        radius: 12
                        padding: "12dp", 0, "12dp", "24dp"
                        ripple_behavior: True
                        md_bg_color: get_color_from_hex("#FAFAFA")
                        MDIconButton:
                            icon: "heart-plus-outline"
                            pos_hint: {"center_x": .50, "center_y": .33}
                        MDLabel:
                            text:"Necesito un donador"
                            halign: "center"
                            adaptive_height: True
                            line_height: .6
                            font_size: "14sp"


                    MDCard:
                        orientation: "vertical"
                        radius: 12
                        padding: "12dp", 0, "12dp", "24dp"
                        ripple_behavior: True
                        md_bg_color: get_color_from_hex("#FAFAFA")
                        on_release: 
                            app.root.transition.direction = "left" 
                            app.root.current = 'questions'
                        MDIconButton:
                            icon: "help-circle-outline"
                            pos_hint: {"center_x": .50, "center_y": .23}
                        MDLabel:
                            text:"Preguntas frecuentes"
                            halign: "center"
                            adaptive_height: True
                            line_height: .6
                            font_size: "14sp"


                    MDCard:
                        orientation: "vertical"
                        radius: 12
                        padding: "12dp", 0, "12dp", "24dp"
                        ripple_behavior: True
                        md_bg_color: get_color_from_hex("#FAFAFA")
                        MDIconButton:
                            icon: "account-group-outline"
                            pos_hint: {"center_x": .50, "center_y": .23}
                        MDLabel:
                            text:"Acerca de Basantranfs"
                            halign: "center"
                            adaptive_height: True
                            line_height: .6
                            font_size: "14sp"

#########################################
#     PANTALLA DE GRUPO DE SANGRE
#########################################

            MDBottomNavigationItem:
                name:"group_blood_creen"
                icon: "water"
                GroupSangre:
                    name: 'group_blood_creen'
                MDFloatLayout:
                    FitImage:
                        source:'asset/img/sangre2.png'
                    MDLabel:
                        text: "Grupo de Sangre"
                        font_size: '25sp'
                        font_name: 'asset/Fuentes/Poppins-SemiBold.ttf'
                        halign: 'center'
                        pos_hint: {"center_x": .50, "center_y": .95}
                    MDLabel:
                        id: sagre_sangre_paciente
                        text: "hola"
                        font_size: '40sp'
                        font_name: 'asset/Fuentes/Poppins-SemiBold.ttf'
                        halign: 'center'
                        pos_hint: {"center_x": .50, "center_y": .83}
                        text_color: 'red'
                        theme_text_color: 'Custom'
                    MDLabel:
                        text: "Puede donar a:"
                        font_size: '15sp'
                        font_name: 'asset/Fuentes/Poppins-SemiBold.ttf'
                        halign: 'center'
                        pos_hint: {"center_x": .2, "center_y": .60}
                        text_color: 'white'
                        theme_text_color: 'Custom'
                    MDLabel:
                        id: paciente_donar
                        text: ""
                        font_size: '20sp'
                        font_name: 'asset/Fuentes/Poppins-SemiBold.ttf'
                        halign: 'center'
                        pos_hint: {"center_x": .50, "center_y": .50}
                        text_color: 'white'
                        theme_text_color: 'Custom'
                    MDLabel:
                        text: "Puede rebir de:"
                        font_size: '15sp'
                        font_name: 'asset/Fuentes/Poppins-SemiBold.ttf'
                        halign: 'center'
                        pos_hint: {"center_x": .2, "center_y": .40}
                        text_color: 'white'
                        theme_text_color: 'Custom'
                    MDLabel:
                        id: paciente_recibir
                        text: ""
                        font_size: '20sp'
                        font_name: 'asset/Fuentes/Poppins-SemiBold.ttf'
                        halign: 'center'
                        pos_hint: {"center_x": .50, "center_y": .30}
                        text_color: 'white'
                        theme_text_color: 'Custom'
                    MDLabel:
                        text: "Hemoglobina:"
                        font_size: '15sp'
                        font_name: 'asset/Fuentes/Poppins-SemiBold.ttf'
                        halign: 'center'
                        pos_hint: {"center_x": .50, "center_y": .20}
                        text_color: 'white'
                        theme_text_color: 'Custom'
                    MDLabel:
                        id: donante_hemoglobina
                        text: "Cuando sea donante de basantranfs\n podrá visualizar su emoglobina aquí!"
                        font_size: '15sp'
                        font_name: 'asset/Fuentes/Poppins-SemiBold.ttf'
                        halign: 'center'
                        pos_hint: {"center_x": .50, "center_y": .10}
                        text_color: 'white'
                        theme_text_color: 'Custom'

#########################################
#     PANTALLA DE LOCATION
#########################################

            MDBottomNavigationItem:
                name:"location_screen"
                icon: "map-marker-radius"
                LocationScreen:
                    name: 'location_screen'
                MDFloatLayout:
                    MDLabel:
                        text: "Ubicación"
                        font_size: '25sp'
                        font_name: 'asset/Fuentes/Poppins-SemiBold.ttf'
                        pos_hint: {"center_x": .80, "center_y": .90}
                    MDFloatLayout:
                        MDSmartTile:
                            radius: 24
                            box_radius: [0, 0, 24, 24]
                            box_color: [1, 1, 1, 1]
                            source: "asset/img/location_sc3.png"
                            url: "https://goo.gl/maps/hiq32YzLHpcbxS9j6"
                            pos_hint: {"center_x": .5, "center_y": .6}
                            size_hint: None, None
                            size: "320dp", "240dp"
                            elevation: 5
                            on_release: root.open_google_maps(self)

                            MDIconButton:
                                icon: "heart-outline"
                                theme_icon_color: "Custom"
                                icon_color: 1, 0, 0, 1
                                pos_hint: {"center_y": .5}
                                on_release: root.open_google_maps(self)
                                icon: "directions"
                            TwoLineListItem:
                                text: "[color=#000000][b]Banco de Sangre Basantranfs[/b][/color]"
                                secondary_text: "[color=#808080][b]San Cristóbal - Táchira[/b][/color]"
                                pos_hint: {"center_y": .5}
                                _no_ripple_effect: True

                        MDCard:
                            size_hint: .90, .35
                            pos_hint: {"center_x": .5, "center_y": .19}
                            MDFloatLayout:
                                MDIconButton:
                                    icon: "heart-outlin"
                                    theme_icon_color: "Custom"
                                    icon_color: 1, 0, 0, 1
                                    pos_hint: {"center_x": .1, "center_y": .85}
                                    on_release: root.open_google_maps(self)
                                    icon: "map-marker"
                                MDLabel:
                                    text: '5001, San Cristóbal 5001, Táchira, Venezuela'
                                    bold: True
                                    color: [0, 0, 0]
                                    font_size: '12sp'
                                    pos_hint: {"center_x": .7, "center_y": .85}

                                MDIconButton:
                                    theme_icon_color: "Custom"
                                    icon_color: 1, 0, 0, 1
                                    pos_hint: {"center_x": .1, "center_y": .65}
                                    icon: "phone"
                                MDLabel:
                                    text: '0416-5029813'
                                    bold: True
                                    color: [0, 0, 0]
                                    font_size: '12sp'
                                    pos_hint: {"center_x": .7, "center_y": .65}

                                MDIconButton:
                                    theme_icon_color: "Custom"
                                    icon_color: 1, 0, 0, 1
                                    pos_hint: {"center_x": .1, "center_y": .45}
                                    icon: "clock"
                                MDLabel:
                                    text: 'Abierto las 24 horas'
                                    bold: True
                                    color: [0, 0, 0]
                                    font_size: '12sp'
                                    pos_hint: {"center_x": .7, "center_y": .45}

                                MDIconButton:
                                    theme_icon_color: "Custom"
                                    icon_color: 1, 0, 0, 1
                                    pos_hint: {"center_x": .1, "center_y": .30}
                                    icon: "minus"

                                MDLabel:
                                    text: 'Redes Sociales:'
                                    bold: True
                                    color: [0, 0, 0]
                                    font_size: '12sp'
                                    pos_hint: {"center_x": .7, "center_y": .30}

                                MDIconButton:
                                    theme_icon_color: "Custom"
                                    icon_color: (0.13, 0.72, 0.29, 1)
                                    pos_hint: {"center_x": .3, "center_y": .13}
                                    on_release: root.open_whatsapp(self)
                                    icon: "whatsapp"

                                MDIconButton:
                                    theme_icon_color: "Custom"
                                    icon_color: (0.23, 0.35, 0.60, 1)
                                    pos_hint: {"center_x": .5, "center_y": .13}
                                    on_release: root.open_facebook(self)
                                    icon: "facebook"

                                MDIconButton:
                                    theme_icon_color: "Custom"
                                    icon_color: (0.5, 0, 0, 1)
                                    pos_hint: {"center_x": .7, "center_y": .13}
                                    on_release: root.open_instagram(self)
                                    icon: "instagram"


