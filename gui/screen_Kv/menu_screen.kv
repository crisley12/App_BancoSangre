<MenuScreen>:
    MDScreen:
        name: "menu"
    MDFloatLayout:
        md_bg_color: get_color_from_hex("#ffffff")
        ##ECECEC
        MDCard:
            id: image_bg_box
            md_bg_color: get_color_from_hex("#F41F05")
            size_hint_y: .30
            pos_hint: {"top": 1}
            radius: [0, 0, 50, 50]
            elevation: 3
        #FitImage:
            #source: 'asset/img/logo.png'
            #size_hint: None, None
            #adaptive_size: True
            #size: self.parent.width - dp(72), self.parent.height - dp(72)
            #allow_stretch: True
            #keep_ratio: False
            #x: -dp(20)
            #y: dp(40)
    MDLabel:
        text: "Basantranfs"
        font_name: 'asset/Fuentes/Poppins-SemiBold.ttf'
        pos_hint: {"center_x": .5, "center_y": .93}
        halign: 'center'
        text_color: get_color_from_hex("#FFFFFF")
        font_size: '30sp'
        theme_text_color: 'Custom'

    MDLabel:
        text: "Crisley Gonzalez"
        #bold: True
        font_size: "20sp"
        font_name: 'asset/Fuentes/Poppins-SemiBoldItalic.ttf'
        theme_text_color: "Custom"
        text_color: get_color_from_hex("#FFFFFF")
        pos_hint: {"center_y": .80}
        x: "15dp"
        line_height: .6
      

    
    MDLabel:
        text: "AB+"
        #bold: True
        font_size: "20sp"
        font_name: 'asset/Fuentes/Poppins-SemiBoldItalic.ttf'
        theme_text_color: "Custom"
        text_color: get_color_from_hex("#FFFFFF")
        pos_hint: {"center_y": .80}
        x: "270dp"
        line_height: .8


    MDGridLayout:
        id: cards_box
        cols: 2
        rows: 3
        spacing: "18dp"
        padding: "35dp"
        size_hint_y: None
        height: root.height / 1.4

        MDCard:
            orientation: "vertical"
            radius: 12
            padding: "12dp", "5dp", "12dp", "12dp"
            ripple_behavior: True
            md_bg_color: get_color_from_hex("#ffffff")
            elevation: 2
            on_release: app.root.current = 'requirements'
            Image:
                source: 'asset/img/logo.png'
            MDLabel:
                text:"Requisitos para donar sangre"
                halign: "center"
                adaptive_height: True
                #font_name: "asset\Fuentes\Poppins-LightItalic.ttf"
                line_height: .6
                font_size: "14sp"


